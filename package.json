{
  "name": "echo-wallet",
  "author": {
    "name": "PixelPlex, Inc.",
    "email": "info@pixelplex.io",
    "url": "https://pixelplex.io"
  },
  "description": "Echo Wallet: Cryptocurrency wallet for Echo platform",
  "homepage": "https://github.com/echoprotocol/echo-wallet",
  "version": "1.4.0",
  "license": "MIT",
  "main": "build/electron/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=local webpack-dev-server --mode development --progress --colors --history-api-fallback --hot --inline",
    "build": "cross-env NODE_ENV=production webpack --display-error-details --colors --mode production",
    "build-dev": "cross-env NODE_ENV=development webpack --progress --display-error-details --colors --mode production",
    "lint": "node_modules/.bin/eslint 'src/**/*.jsx' 'src/**/*.js'",
    "build-electron": "cross-env ELECTRON=TRUE NODE_ENV=production webpack --env.prod --env.electron --env.hash",
    "postbuild-electron": "npm run prepare-electron",
    "prepare-electron": "copyfiles -f src/assets/app_resources/index.js src/assets/app_resources/preload.js build/electron/",
    "prepackage": "npm run build-electron",
    "package": "build -p never",
    "package-win": "npm run prepackage && build -p never --windows",
    "package-deb": "npm run prepackage && build -p never --linux deb",
    "package-mac": "npm run prepackage && build -p never --mac dmg",
    "build-electron-debug": "cross-env ELECTRON=TRUE NODE_ENV=production webpack --env.prod --env.electron --env.hash",
    "postbuild-electron-debug": "copyfiles -f src/assets/app_resources/debug.js src/assets/app_resources/preload.js build/electron/ && mv build/electron/debug.js build/electron/index.js",
    "package-win-debug": "npm run build-electron-debug && build -p never --windows",
    "package-deb-debug": "npm run build-electron-debug && build -p never --linux deb"
  },
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "bignumber.js": "^7.2.1",
    "bn.js": "^4.11.8",
    "bs58": "^4.0.1",
    "classnames": "^2.2.6",
    "crypto-random-string": "^3.0.1",
    "echojs-lib": "1.8.0-rc.1",
    "echojs-ping": "^0.1.5",
    "electron-context-menu": "^0.10.0",
    "electron-winstaller": "^2.7.0",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "idb": "^4.0.4",
    "immutable": "^3.8.2",
    "js-sha3": "^0.7.0",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.7.0",
    "moment": "^2.22.2",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "react": "^16.5.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.10",
    "react-lottie": "^1.2.3",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-scroll": "^1.7.10",
    "react-toastify": "^4.3.2",
    "redux": "^3.7.2",
    "redux-modules": "^1.1.1",
    "redux-thunk": "^2.3.0",
    "rlp": "^2.1.0",
    "scrypt-js": "^2.0.4",
    "semantic-ui-react": "^0.78.3",
    "terser-webpack-plugin": "^1.3.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "electron": "^2.0.17",
    "electron-builder": "^20.28.4",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "7.14.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.0.4",
    "img-loader": "^2.0.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/echoprotocol/echo-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/echoprotocol/echo-wallet/issues"
  },
  "build": {
    "productName": "Echo Wallet",
    "appId": "org.echo",
    "files": [
      "*.js",
      "build",
      "node_modules"
    ],
    "directories": {
      "buildResources": "src/assets/app_resources",
      "output": "build/binaries"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "linux": {
      "category": "Finance",
      "target": [
        "deb"
      ],
      "executableName": "Echo Wallet",
      "desktop": "Echo Wallet",
      "synopsis": "Echo Wallet: Cryptocurrency wallet for Echo platform"
    },
    "deb": {
      "afterRemove": "resources/scripts/linux-package.after-remove.sh"
    }
  }
}
