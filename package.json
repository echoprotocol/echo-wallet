{
  "name": "PixelPlex-app",
  "description": "PixelPlex React Redux app",
  "version": "0.1.0",
  "scripts": {
    "start": "cross-env NODE_ENV=local webpack-dev-server --mode development --progress --colors --history-api-fallback --hot --inline",
    "build": "cross-env NODE_ENV=production webpack --progress --display-error-details --colors --mode production",
    "build-dev": "cross-env NODE_ENV=development webpack --progress --display-error-details --colors --mode production",
    "lint": "node_modules/.bin/eslint 'src/**/*.jsx' 'src/**/*.js'",
    "package-prepare": "ELECTRON=TRUE npm run build-dev",
    "package-osx": "electron-packager ./dist Echo --platform=darwin --out ./dist/inst/ && electron-installer-dmg dist/inst/Echo-darwin-x64/Echo.app/ dist/installers/Echo",
    "package-linux": "electron-packager ./dist Echo --platform linux --arch amd64 --out ./dist/inst/ && electron-installer-debian --src dist/inst/Echo-linux-amd64/ --dest dist/installers/ --arch amd64"
  },
  "dependencies": {
    "accounting": "^0.4.1",
    "autoprefixer": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "bignumber.js": "^7.2.1",
    "classnames": "^2.2.6",
    "config": "^1.31.0",
    "echojs-lib": "git+ssh://git@gitlab.pixelplex.by/645.echo/echojs/echojs-lib.git",
    "echojs-redux": "^0.1.0",
    "echojs-ws": "git+ssh://git@gitlab.pixelplex.by/645.echo/echojs/echojs-ws.git",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "js-sha3": "^0.7.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "prop-types": "^15.6.1",
    "react": "^16.4.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-toastify": "^4.1.0",
    "redux": "^3.7.2",
    "redux-modules": "^1.1.0",
    "redux-thunk": "^2.3.0",
    "semantic-ui-react": "^0.78.3",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.18",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "electron": "^2.0.6",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^12.1.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.0.4",
    "img-loader": "^2.0.1",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^2.0.10",
    "webpack-dev-middleware": "^3.0.0",
    "webpack-dev-server": "^3.1.0"
  }
}
