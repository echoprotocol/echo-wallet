{
  "name": "PixelPlex-app",
  "author": "PixelPlex <info@pixelplex.by>",
  "description": "PixelPlex React Redux app",
  "homepage": "https://pixelplex.by/",
  "version": "0.1.0",
  "main": "build/electron/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=local webpack-dev-server --mode development --progress --colors --history-api-fallback --hot --inline",
    "build": "cross-env NODE_ENV=production webpack --progress --display-error-details --colors --mode production",
    "build-dev": "cross-env NODE_ENV=development webpack --progress --display-error-details --colors --mode production",
    "lint": "node_modules/.bin/eslint 'src/**/*.jsx' 'src/**/*.js'",
    "package-prepare": "ELECTRON=TRUE npm run build-dev",
    "package-osx": "electron-packager ./dist Echo --platform=darwin --out ./dist/inst/ && electron-installer-dmg dist/inst/Echo-darwin-x64/Echo.app/ dist/installers/Echo",
    "package-linux": "electron-packager ./dist PixelPlex-app --platform=linux --arch x64 --out ./dist/inst/ && electron-installer-debian --src dist/inst/PixelPlex-app-linux-x64/ --arch amd64 --config config/debian-package.json",
    "build-electron": "cross-env ELECTRON=TRUE NODE_ENV=production webpack --env.prod --env.electron --env.hash",
    "postbuild-electron": "npm run prepare-electron",
    "prepare-electron": "copyfiles -f src/assets/app_resources/index.js build/electron/",
    "prepackage": "npm run build-electron",
    "package": "build -p never",
    "package-win": "npm run prepackage && build  -p never --windows",
    "package-deb": "npm run prepackage && build  -p never --linux deb"
  },
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "bignumber.js": "^7.2.1",
    "classnames": "^2.2.6",
    "config": "^1.31.0",
    "echojs-lib": "git+ssh://git@gitlab.pixelplex.by/645.echo/echojs/echojs-lib.git",
    "echojs-redux": "git+ssh://git@gitlab.pixelplex.by/645.echo/echojs/echojs-redux.git",
    "echojs-ws": "git+ssh://git@gitlab.pixelplex.by/645.echo/echojs/echojs-ws.git",
    "electron-winstaller": "^2.6.4",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "immutable": "^3.8.2",
    "js-sha3": "^0.7.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "prop-types": "^15.6.1",
    "query-string": "^6.1.0",
    "react": "^16.4.2",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-toastify": "^4.2.0",
    "redux": "^3.7.2",
    "redux-modules": "^1.1.1",
    "redux-thunk": "^2.3.0",
    "rlp": "^2.1.0",
    "semantic-ui-react": "^0.78.3",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "copyfiles": "^2.0.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.10",
    "electron": "^2.0.7",
    "electron-builder": "^20.28.2",
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^12.1.1",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.0.4",
    "img-loader": "^2.0.1",
    "node-sass": "^4.9.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "url-loader": "^1.1.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-middleware": "^3.0.0",
    "webpack-dev-server": "^3.1.6"
  },
  "build": {
    "appId": "org.echo",
    "files": [
      "*.js",
      "build",
      "node_modules"
    ],
    "directories": {
      "buildResources": "src/assets/app_resources",
      "output": "build/binaries"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Finance",
      "target": [
        "deb"
      ],
      "synopsis": "BitShares: Cryptocurrency and Decentralized Exchange"
    }
  }
}
