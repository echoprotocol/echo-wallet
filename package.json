    "cross-env": "^5.1.4",
    "cross-spawn": "^6.0.5",
    "css-loader": "^1.0.1",
    "detect-port": "^1.3.0",
    "download": "^7.1.0",
    "electron": "^2.0.17",
    "electron-builder": "^20.28.4",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "7.14.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "git-revision-webpack-plugin": "^3.0.4",
    "html-webpack-plugin": "^3.0.4",
    "img-loader": "^3.0.1",
    "node-sass": "^4.9.3",
    "rimraf": "^2.6.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.2",
    "tar": "^4.4.10",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/echoprotocol/echo-wallet.git"
  },
  "bugs": {
    "url": "https://github.com/echoprotocol/echo-wallet/issues"
  },
  "build": {
    "productName": "Echo Wallet",
    "appId": "org.echo",
    "extraFiles": [
      {
        "from": "resources/${os}/bin",
        "to": "resources/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/icons",
        "to": "resources/icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "*.js",
      "build",
      "node_modules",
      "build/electron/index.js",
      "build/electron/index.js.map"
    ],
    "directories": {
      "buildResources": "resources/icons",
      "output": "build/binaries"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    },
    "linux": {
      "category": "Finance",
      "target": [
        "deb"
      ],
      "executableName": "Echo Wallet",
      "desktop": "Echo Wallet",
      "synopsis": "Echo Wallet: Cryptocurrency wallet for Echo platform"
    },
    "deb": {
      "afterRemove": "scripts/linux-package.after-remove.sh"
    }
  }
}
